<h1>Listing hoe$ log entries:</h1>
 
<%= link_to 'New Hoe$ Entry', new_article_path %>
<table>
  <tr>
    <th>Name of hoe$</th>
    <th>What hoe$ did</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>